# YouTube Reporter - 환경 변수 설정
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# ===== 애플리케이션 기본 설정 =====
APP_NAME="YouTube Reporter"
APP_VERSION="2.0.0"
DEBUG=false

# 서버 설정
HOST=0.0.0.0
PORT=8000

# ===== 필수 API 키 =====
# VidCap API (YouTube 자막 추출용) - 필수
VIDCAP_API_KEY=your_vidcap_api_key_here

# AWS 설정 - 필수
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS Bedrock 설정 - 필수
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# ===== 선택적 설정 =====
# S3 스토리지 (선택적)
S3_BUCKET_NAME=your-s3-bucket-name

# OpenAI API (DALL-E 이미지 생성용 - 선택적)
OPENAI_API_KEY=your_openai_api_key_here

# YouTube Data API (영상 정보 가져오기용 - 선택적)
YOUTUBE_API_KEY=your_youtube_api_key_here

# ===== LangChain 설정 =====
# LangSmith 추적 (선택적)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=youtube-reporter
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# ===== 로깅 설정 =====
LOG_LEVEL=INFO

# ===== CORS 설정 =====
# 프론트엔드 도메인 (개발용)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]

# ===== VidCap API 설정 =====
VIDCAP_API_URL=https://vidcap.xyz/api/v1/youtube/caption

# ===== Redis 설정 (선택적) =====
REDIS_URL=redis://localhost:6379/0

# ===== 데이터베이스 설정 (선택적) =====
DATABASE_URL=sqlite:///./youtube_reporter.db

# ===== 보안 설정 (프로덕션용) =====
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== 성능 설정 =====
# 최대 동시 처리 작업 수
MAX_CONCURRENT_JOBS=5

# 작업 타임아웃 (초)
JOB_TIMEOUT=300

# 오래된 작업 정리 주기 (시간)
CLEANUP_INTERVAL_HOURS=24

# ===== API 제한 설정 =====
# 요청 제한 (분당)
RATE_LIMIT_PER_MINUTE=60

# 작업 큐 크기
MAX_QUEUE_SIZE=100

# ===== 모니터링 설정 =====
# Prometheus 메트릭 (선택적)
ENABLE_METRICS=false
METRICS_PORT=9090

# 헬스체크 간격 (초)
HEALTH_CHECK_INTERVAL=30

# ===== 개발 설정 =====
# 자동 리로드 (개발용)
AUTO_RELOAD=true

# 테스트 모드
TEST_MODE=false

# 더미 데이터 사용 (테스트용)
USE_DUMMY_DATA=false